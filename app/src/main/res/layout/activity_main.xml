<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_collapseMode="pin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="10">

    <LinearLayout
        android:id="@+id/main_cardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/main_firstSportButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3" >

            <android.support.v7.widget.CardView
                android:id="@+id/main_upperSportCardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                card_view:cardElevation="@dimen/elevation"
                card_view:cardCornerRadius="@dimen/corner_sport_button"
                card_view:cardBackgroundColor="@color/yellow"
                android:clickable="true">

                <ImageView
                    android:id="@+id/main_upperSportImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_upper_boddy_sport2"/>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/main_upperSport2CardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                card_view:cardElevation="@dimen/elevation"
                card_view:cardCornerRadius="@dimen/corner_sport_button"
                card_view:cardBackgroundColor="@color/red"
                android:clickable="true">

            <ImageView
                android:id="@+id/main_upperSport2ImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_upper_body_sport" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/main_lowerSportCardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                card_view:cardElevation="@dimen/elevation"
                card_view:cardCornerRadius="@dimen/corner_sport_button"
                card_view:cardBackgroundColor="@color/green"
                android:clickable="true">
            <ImageView
                android:id="@+id/main_lowerSportImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_lower_body_sport" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_secondSportButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3" >

            <android.support.v7.widget.CardView
                android:id="@+id/main_allBodySportCardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                card_view:cardElevation="@dimen/elevation"
                card_view:cardCornerRadius="@dimen/corner_sport_button"
                card_view:cardBackgroundColor="@color/light_blue"
                android:clickable="true">
            <ImageView
                android:id="@+id/main_allBodySportImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_all_body_sport" />
</android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/main_stretchSportCardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                card_view:cardElevation="@dimen/elevation"
                card_view:cardCornerRadius="@dimen/corner_sport_button"
                card_view:cardBackgroundColor="@color/purple"
                android:clickable="true">
            <ImageView
                android:id="@+id/main_stretchSportImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_stretch_sport" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/main_sweatSportCardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                card_view:cardElevation="@dimen/elevation"
                card_view:cardCornerRadius="@dimen/corner_sport_button"
                card_view:cardBackgroundColor="@color/dark_blue"
                android:clickable="true">
            <ImageView
                android:id="@+id/main_sweatSportImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sweat_sport" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="6"
        android:background="@drawable/ic_blackboard_2"
        android:orientation="vertical"
        android:padding="25dp"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/main_firstRowblackBoardLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_secondRowblackBoardLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_thirdRowblackBoardLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="3" >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/main_goButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:text="@string/go"
                android:clickable="true"
                android:visibility="invisible"
                android:src="@drawable/ic_check"
                android:elevation="@dimen/elevation"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>